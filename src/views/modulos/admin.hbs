<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
  <div class="wrapper wrapper--w790">
    <div class="card card-5">
      <div class="card-heading">
        <h2 class="title">Actualizar Datos</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/admin">
          <input type="hidden" value="{{data.id}}" name="id" />
          <div class="form-row">
            <div class="name">Nombre</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="text" name="nombre" value='{{data.nombre}}'>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="name">Apellido</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="text" name="apellido" value="{{data.apellido}}">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="name">Email</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="email" name="email" value="{{data.email}}" />
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="name">Telefono</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="number" name="telefono" value="{{data.telefono}}">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="name">Edad</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="number" name="edad" value="{{data.edad}}">
              </div>
            </div>
          </div>
          <div class="form-row">
            <div class="name">Profesion</div>
            <div class="value">
              <div class="input-group">
                <input class="input--style-5" type="text" name="profesion" value="{{data.profesion}}">
              </div>
            </div>
          </div>
          <div>
            <button class="btn btn--radius-2 btn--red" type="submit">Actualizar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>